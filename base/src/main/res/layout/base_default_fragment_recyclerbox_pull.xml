<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_default_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.liangmayong.base.widget.layout.PullRefreshLayout
            android:id="@id/base_refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.liangmayong.base.widget.recyclerbox.RecyclerBox
                android:id="@id/base_recyclerbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />
        </com.liangmayong.base.widget.layout.PullRefreshLayout>
    </LinearLayout>
</LinearLayout>
