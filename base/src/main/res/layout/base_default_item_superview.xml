<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@id/base_default_adapter_linear"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/base_default_item_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <com.liangmayong.base.widget.iconfont.IconView
            android:id="@id/base_default_adapter_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#676767"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@id/base_default_adapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@id/base_default_adapter_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="#676767"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@id/base_default_adapter_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:textColor="#676767"
                android:textSize="14sp" />

            <TextView
                android:id="@id/base_default_adapter_right_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:textColor="#676767"
                android:textSize="14sp" />
        </LinearLayout>

        <com.liangmayong.base.widget.iconfont.IconView
            android:id="@id/base_default_adapter_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:paddingRight="@dimen/base_toolbar_item_padding"
            android:singleLine="true"
            android:text=">"
            android:textColor="#676767"
            android:textSize="@dimen/base_toolbar_item_text_size" />
    </LinearLayout>
</RelativeLayout>