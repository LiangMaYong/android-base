<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BasicViewDrawer -->
    <declare-styleable name="BasicViewDrawer">
        <attr name="stroke_width" format="dimension"/>
        <attr name="radius" format="dimension"/>
        <attr name="shape_type" format="enum">
            <enum name="round" value="0"/>
            <enum name="rectangle" value="1"/>
            <enum name="stroke" value="2"/>
            <enum name="oval" value="3"/>
            <enum name="transparent" value="4"/>
        </attr>
    </declare-styleable>

    <!-- BasicViewHandler -->
    <declare-styleable name="BasicViewHandler">
        <attr name="pressed_color" format="color"/>
        <attr name="unpressed_color" format="color"/>
        <attr name="unpressed_cover_color" format="color"/>
        <attr name="unpressed_transparent" format="boolean"/>
    </declare-styleable>

    <!-- BasicFontTextView -->
    <declare-styleable name="BasicFontView">
        <attr name="fontPath" format="string"/>
    </declare-styleable>

    <!-- SkinViewStyleable -->
    <declare-styleable name="ThemeView">
        <attr name="theme_color" format="color"/>
        <attr name="theme_text_color" format="color"/>
        <attr name="theme_type" format="enum">
            <enum name="default_type" value="0"/>
            <enum name="primary" value="1"/>
            <enum name="success" value="2"/>
            <enum name="info" value="3"/>
            <enum name="warning" value="4"/>
            <enum name="danger" value="5"/>
            <enum name="white" value="6"/>
            <enum name="gray" value="7"/>
            <enum name="black" value="8"/>
        </attr>
    </declare-styleable>

    <!-- ShapeViewStyleable -->
    <declare-styleable name="ShapeViewStyleable">
        <attr name="shapeSquare" format="boolean"/>
        <attr name="shapeCover" format="reference"/>
        <attr name="shapePressed" format="color"/>
        <attr name="shapeBackground" format="color"/>
        <attr name="shape" format="reference"/>
    </declare-styleable>

    <!-- LogcatTextView -->
    <declare-styleable name="LogcatTextView">
        <attr name="verboseColor" format="color"/>
        <attr name="debugColor" format="color"/>
        <attr name="errorColor" format="color"/>
        <attr name="infoColor" format="color"/>
        <attr name="warningColor" format="color"/>
        <attr name="consoleColor" format="color"/>
    </declare-styleable>

    <!-- SegmentView -->
    <declare-styleable name="SegmentView">
        <attr name="segmentBackgroundColor" format="color"/>
        <attr name="segmentUnSelectBackgroundColor" format="color"/>
        <attr name="segmentTextColor" format="color"/>
        <attr name="segmentUnSelectTextColor" format="color"/>
    </declare-styleable>

    <!-- RectangleLayout -->
    <declare-styleable name="RectangleLayout">
        <attr name="ratio" format="float"/>
    </declare-styleable>

    <!-- SwipeBackLayout -->
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension"/>
        <attr name="edge_flag">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="all" value="3"/>
        </attr>
        <attr name="shadow_left" format="reference"/>
        <attr name="shadow_right" format="reference"/>
        <attr name="shadow_bottom" format="reference"/>
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference"/>
</resources>