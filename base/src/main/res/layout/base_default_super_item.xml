<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@id/base_default_item_linear"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/base_default_item_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/base_default_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@id/base_default_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <TextView
                android:id="@id/base_default_item_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="#676767"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@id/base_default_item_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:textColor="#676767"
                android:textSize="14sp"/>

            <TextView
                android:id="@id/base_default_item_right_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:textColor="#676767"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/base_default_item_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/base_default_ic_item_arrow"/>
    </LinearLayout>
</RelativeLayout>