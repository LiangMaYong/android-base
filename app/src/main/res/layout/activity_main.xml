<?xml version="1.0" encoding="utf-8"?>
<com.liangmayong.skin.SkinLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_defualt_toolbar" />

    <com.liangmayong.skin.SkinButton
        android:id="@+id/sbutton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:text="确定按钮"
        skin:background_cover="#50ffffff" />

    <com.liangmayong.base.widget.pullrefresh.PullRefreshLayout
        android:id="@+id/pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.liangmayong.base.widget.relistview.ReListView
            android:id="@+id/relist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:orientation="vertical" />
    </com.liangmayong.base.widget.pullrefresh.PullRefreshLayout>
</com.liangmayong.skin.SkinLinearLayout>
